<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input type="text" name="name" placeholder="Digite seu nome completo" value='{{cordinator.name}}' required>
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div class="input">
        <input  type="email" name="email" placeholder="Digite seu email" value='{{cordinator.email}}' onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input type="password" name="password" {%if not cordinator.id%} placeholder="Escolha uma senha segura" {%else%} placeholder="Digite sua senha para atualizar seu cadastro" {%endif%}>
    </div>
</div>
{%if not cordinator.id %}
<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input type="password" name="passwordRepeat" placeholder="Repita a senha escolida">
    </div>
</div>
{% endif %}
