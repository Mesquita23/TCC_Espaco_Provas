{% extends "../layout.njk" %}

{% block content %}

    <section class="password container form">
        <form method="POST" action="/cordinators/forgot-password">

            <div class="header">
                <h3>esqueceu a senha?</h3>
            </div>

            <div class="item">
                
                <div>Email</div>
                <div class="input">
                    <input type="email" name="email" placeholder="Digite seu email" value="{{cordinator.email}}" onblur="Validate.apply(this, 'isEmail')">
                </div>
            </div>

            <button class="button" type="submit">Recuperar senha</button>
        </form>
    </section>

{% endblock content %}