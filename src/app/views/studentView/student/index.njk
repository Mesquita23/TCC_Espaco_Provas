{% extends "../layout.njk" %}

{% block content %}

<section class="student-dashboard container form">
    <h3 style="text-align: center; padding: 14px; ">CONTA</h3>
    <form method="POST" action="/students?_method=PUT" >
       
            <div class="header">
                <h3>Detalhes</h3>
            </div>

            <div class="fields">
                {% include 'studentView/student/fields.njk'%}
                <input type="hidden", name="id" value={{student.id}}>
            </div>

            
                <button class="button edit" type="submit">Editar</button>
        </form>
        <form id="form-delete" action="/students?_method=DELETE" method="post">
            <input type="hidden" name="id" value="{{student.id}}">
            <button class="button delete"  type="submit">Deletar</button>
        </form>
</section>
<script>
const formDelete = document.querySelector("#form-delete")
formDelete.addEventListener("submit", function (event) {
    const confirmation = confirm("Isto deletará seu usário deste sistema, tem certeza? Esta operação não poderá ser desfeita.")
    if (!confirmation) {
        event.prevenDefault()
    }
})
</script>

    {% endblock content %}